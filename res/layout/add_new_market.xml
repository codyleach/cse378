<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@drawable/background_gradient">
		<include layout="@layout/header"
		  	android:layout_height="wrap_content"
		  	android:layout_width="fill_parent" />
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#FFF"
			android:textSize="35px"
			android:shadowColor="#FF6D6D6D"
			android:shadowDx="1"
			android:shadowDy="1"
			android:shadowRadius="1"
			android:text="Add A New Market"
			android:layout_gravity="center_horizontal" />
		<EditText
			android:id="@+id/add_new_market_name"
			android:layout_gravity="center_horizontal"
			android:hint="Name"
			android:layout_width="match_parent" 
			android:layout_height="wrap_content" 
			android:layout_marginLeft="5dip"
			android:layout_marginRight="5dip" />	
		<EditText
			android:layout_gravity="center_horizontal"
			android:hint="Address"
			android:layout_width="match_parent" 
			android:layout_height="wrap_content" 
			android:layout_marginLeft="5dip"
			android:layout_marginRight="5dip" />
		<EditText
			android:layout_gravity="center_horizontal"
			android:hint="Market Date"
			android:layout_width="match_parent" 
			android:layout_height="wrap_content" 
			android:layout_marginLeft="5dip"
			android:layout_marginRight="5dip" />
		<EditText
			android:layout_gravity="center_horizontal"
			android:hint="Market Start Time"
			android:layout_width="match_parent" 
			android:layout_height="wrap_content" 
			android:layout_marginLeft="5dip"
			android:layout_marginRight="5dip" />
		<EditText
			android:layout_gravity="center_horizontal"
			android:hint="Market End Time"
			android:layout_width="match_parent" 
			android:layout_height="wrap_content" 
			android:layout_marginLeft="5dip"
			android:layout_marginRight="5dip" />
		<EditText
			android:layout_gravity="center_horizontal"
			android:hint="Number of Stalls"
			android:layout_width="match_parent" 
			android:layout_height="wrap_content" 
			android:layout_marginLeft="5dip"
			android:layout_marginRight="5dip" />
		<LinearLayout
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginLeft="10px"
			android:layout_gravity="left">
			<Button
				 android:id="@+id/add_new_market_save_button" 
				 android:layout_height="wrap_content" 
				 android:layout_width="125dip" 
				 android:text="Save" />
			<Button 
				android:layout_height="wrap_content"
			 	android:id="@+id/add_new_market_cancel_button"
			 	android:layout_width="125dip" 
			 	android:text="Cancel"
			 	android:layout_marginLeft="5dip" />
	</LinearLayout>
</LinearLayout>
