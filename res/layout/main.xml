<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_gradient">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1">
		<ImageView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip"
			android:layout_marginTop="15dip"
			android:src="@drawable/logo" />
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_gravity="center"
			android:src="@drawable/veggies" />
	</LinearLayout>
	<com.communitymarket.MenuButtonItem
	  	android:id="@+id/consumer"
	  	android:text="I'm a consumer"
	  	style="@style/MenuButtonItem"
	  	android:layout_marginTop="30px" />
  	<com.communitymarket.MenuButtonItem
	  	android:id="@+id/producer"
	  	android:text="I'm a producer"
	  	style="@style/MenuButtonItem" />
	<com.communitymarket.MenuButtonItem
	  	android:id="@+id/marketCoordinator"
	  	android:text="I'm a market coordinator"
	  	style="@style/MenuButtonItem" />
</LinearLayout>
