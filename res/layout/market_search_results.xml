<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">
	
	<TextView
		android:layout_gravity="center_horizontal"
		android:text="Lincoln, NE, 68508"
		android:textColor="#fff"
		android:textSize="18px"
		android:textStyle="bold"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_marginTop="15px"
		android:layout_marginBottom="15px"
		/>
	<ImageView 
		android:layout_gravity="center"
		android:layout_width="wrap_content" 
		android:src="@drawable/map2" 
		android:layout_height="wrap_content"
		android:layout_marginRight="15dip"
		android:id="@+id/imageView1"
		android:layout_marginLeft="15dip"/>
	<com.communitymarket.MenuButtonItem
	  	android:id="@+id/getInfoButton"
	  	android:text="Get Information"
	  	style="@style/MenuButtonItem"
	  	android:layout_marginTop="15dip"
	  	/>
  	<com.communitymarket.MenuButtonItem
	  	android:id="@+id/drivingDirectionsButton"
	  	android:text="Driving Directions"
	  	style="@style/MenuButtonItem"
	  	/>
</LinearLayout>
