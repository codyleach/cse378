<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">
	<include layout="@layout/header"
	  	android:layout_height="wrap_content"
	  	android:layout_width="fill_parent"
	  	android:layout_marginBottom="15dip" />
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		style="@style/HeaderTextViewStyle"
		android:text="Lincoln, NE, 68508" />
	<ImageView 
		android:layout_gravity="center"
		android:layout_width="wrap_content" 
		android:src="@drawable/map2" 
		android:layout_height="wrap_content"
		android:layout_marginRight="15dip"
		android:id="@+id/imageView1"
		android:layout_marginLeft="15dip"/>
	<com.communitymarket.MenuButtonItem
	  	android:id="@+id/getInfoButton"
	  	android:text="Get Information"
	  	style="@style/MenuButtonItem"
	  	android:layout_marginTop="15dip"
	  	/>
  	<com.communitymarket.MenuButtonItem
	  	android:id="@+id/drivingDirectionsButton"
	  	android:text="Driving Directions"
	  	style="@style/MenuButtonItem"
	  	/>
</LinearLayout>
