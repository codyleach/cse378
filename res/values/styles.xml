<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="MenuButtonItem" parent="@android:style/Widget.Button">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">5dip</item>
		<item name="android:layout_marginRight">5dip</item>
		<item name="android:gravity">center_vertical</item>
	</style>
	<style name="HeaderTextViewStyle" parent="@android:style/Widget.TextView">
		<item name="android:textColor">#FFF</item>
		<item name="android:textSize">35px</item>
		<item name="android:shadowColor">#FF6D6D6D</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:layout_gravity">center_horizontal</item>
	</style>
	<style name="LoginEditTextStyle" parent="@android:style/Widget.EditText">
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:textColor">#111</item>
		<item name="android:editable">true</item>
		<item name="android:layout_marginBottom">5px</item>
		<item name="android:layout_marginLeft">10px</item>
		<item name="android:layout_marginRight">10px</item>
	</style>
	<style name="RegisterEditTextStyle" parent="@style/LoginEditTextStyle">
		<item name="android:layout_marginBottom">-5px</item>
	</style>
</resources>
